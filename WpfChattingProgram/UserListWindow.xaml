        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChattingProgram"
        mc:Ignorable="d"
        Title="User List Form" Height="450" Width="250" Background="#BCBCBC" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="userList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,38,10,85"/>
        <Button Content="1:1 채팅 요청하기" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" Width="230" Click="Button_Click"/>
        <Label x:Name="usernameAndIP" HorizontalAlignment="Center" VerticalAlignment="Top" Width="230" Height="33" Content="admin님 반갑습니다. (127.0.0.1)" Margin="0,5,0,0"/>

    </Grid>
</Window>
